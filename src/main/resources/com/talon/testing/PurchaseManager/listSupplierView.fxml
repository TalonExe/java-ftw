<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Changed root from AnchorPane to BorderPane -->
<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.talon.testing.controllers.ListSupplierController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button text="Supplier List" onAction="#switchToSupplierList" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;"/>
            <Button text="Item View" onAction="#switchToItemList" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;"/>
        </VBox>
    </left>
   <center>
      <!-- The TableView is now in the center region of the BorderPane -->
      <TableView fx:id="supplierTableView">
        <columns>
          <TableColumn fx:id="supplierIdColumn" prefWidth="100.0" text="Supplier ID" />
          <TableColumn fx:id="supplierNameColumn" prefWidth="180.0" text="Supplier Name" />
          <TableColumn fx:id="contactPersonColumn" prefWidth="150.0" text="Contact Person" />
          <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
          <TableColumn fx:id="phoneNumberColumn" prefWidth="120.0" text="Phone Number" />
          <TableColumn fx:id="addressColumn" prefWidth="200.0" text="Address" />
          <TableColumn fx:id="registrationDateColumn" prefWidth="120.0" text="Registration Date" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>