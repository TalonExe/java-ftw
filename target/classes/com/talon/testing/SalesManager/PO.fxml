<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.talon.testing.controllers.POApprovalController">
   <left>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button onAction="#switchToItemEntry" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="Item Entry" />
            <Button onAction="#switchToSupplierEntry" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="Supplier Entry" />
            <Button onAction="#switchToSalesEntry" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="Daily Sales Entry" />
            <Button onAction="#switchToCreatePR" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="Create PR" />
            <Button onAction="#switchToViewPR" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="View PR" />
            <Button onAction="#switchToViewPO" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-min-width: 150;" text="View PO" />
        </VBox>
    </left>
    <center>
        <VBox spacing="10">
            <Label text="PO Approval Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TableView fx:id="poTable" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="poIdColumnPO" text="PO ID" />
                    <TableColumn fx:id="prIdColumnPO" text="PR ID" />
                    <TableColumn fx:id="statusColumnPO" text="Status" />
                    <TableColumn fx:id="approvedColumnPO" text="Approved" />
                </columns>
            </TableView>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="approveButton" text="Approve Selected PO" style="-fx-base: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="rejectButton" text="Reject Selected PO" style="-fx-base: #F44336; -fx-text-fill: white;" />
            </HBox>
            <VBox spacing="5" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5;">
                <Label text="Modify Item Quantity" style="-fx-font-weight: bold;"/>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Item Code:"/>
                    <TextField fx:id="itemCodeField" promptText="Enter item code" prefWidth="100"/>
                    <Label text="New Quantity:"/>
                    <TextField fx:id="quantityField" promptText="Enter quantity" prefWidth="80"/>
                    <Button fx:id="updateQuantityButton" text="Update Quantity" style="-fx-base: #2196F3; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>